<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="mensajes">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="mensaje" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
         <xs:complexType>
           <xs:sequence>
             <xs:element name="num_telefono" type="xs:string" minOccurs="1" maxOccurs="1"/>
             <xs:element name="fecha_envio" type="xs:string" minOccurs="1" maxOccurs="1"/>
               <xs:complexType>
                 <xs:sequence>
                   <xs:element name="dia" type="xs:day" minOccurs="1" maxOccurs="1"/>
                   <xs:element name="mes" type="xs:string" minOccurs="1" maxOccurs="1"/>
                   <xs:element name="año" type="xs:year" minOccurs="1" maxOccurs="1"/>
                 </xs:sequence>
               </xs:complexType>
             <xs:element name="hora_envio" type="xs:datetime" minOccurs="0" maxOccurs="1"/>
             <xs:element name="contenido_mensaje" type="xs:string" minOccurs="1" maxOccurs="1"/>
           </xs:sequence>
         </xs:complexType>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
